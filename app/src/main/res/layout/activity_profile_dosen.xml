<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background_login_page">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        android:backgroundTint="@color/putih">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Foto Profil (Bulat) -->
            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:src="@drawable/icon_app_midclass_kecil"
                android:contentDescription="Foto Profil"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="32dp"
                android:background="@drawable/circular_border" />

            <!-- Nama Pengguna dengan Tombol Edit -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/namaDosenTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Dosen"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/emailTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email@domain.com"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:layout_gravity="center"/>
                    <ImageView
                        android:id="@+id/editEmailIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_edit"
                        android:contentDescription="Edit email"
                        android:clickable="true"
                        android:focusable="true"/>
                </LinearLayout>

                <View
                    android:layout_width="324dp"
                    android:layout_gravity="center"
                    android:layout_height="1dp"
                    android:background="#DADADA"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/nipJudul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NIP:"
                    android:textSize="10sp"
                    android:layout_marginLeft="13dp"
                    android:textColor="#757575"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/nipTextView"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:paddingStart="9dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="123456789"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:background="@drawable/rounded_edittext_2"/>

                <TextView
                    android:id="@+id/matkulJudul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pengampu :"
                    android:textSize="10sp"
                    android:layout_marginLeft="13dp"
                    android:textColor="#757575"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/matkulPengampuTextView"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:paddingStart="9dp"
                    android:text="Ekonomi Dasar"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:background="@drawable/rounded_edittext_2"/>

                <TextView
                    android:id="@+id/prodiJudul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Program Studi : "
                    android:textSize="10sp"
                    android:layout_marginLeft="13dp"
                    android:textColor="#757575"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/jurusanTextView"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:paddingStart="9dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="Manajemen Informatika (D4)"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:background="@drawable/rounded_edittext_2"/>

                <TextView
                    android:id="@+id/kampusJudul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Perguruan Tinggi : "
                    android:textSize="10sp"
                    android:layout_marginLeft="13dp"
                    android:textColor="#757575"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/kampusTextView"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:paddingStart="9dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="Politeknik Negeri Sriwijaya"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:background="@drawable/rounded_edittext_2"/>

                <View
                    android:layout_width="324dp"
                    android:layout_gravity="center"
                    android:layout_height="1dp"
                    android:background="#DADADA"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/noTelpJudul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nomor Telepon : "
                    android:textSize="10sp"
                    android:layout_marginLeft="13dp"
                    android:textColor="#757575"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/noTelpTextView"
                        android:layout_width="0dp"
                        android:layout_height="27dp"
                        android:layout_weight="1"
                        android:layout_gravity="start"
                        android:gravity="center_vertical"
                        android:paddingStart="9dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:text="081234567890"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:background="@drawable/rounded_edittext_2"/>

                    <ImageView
                        android:id="@+id/editNoTelpIcon"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/ic_edit"
                        android:layout_marginLeft="6dp"
                        android:contentDescription="Edit Jurusan"
                        android:clickable="true"
                        android:focusable="true"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/alamatJudul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat : "
                    android:textSize="10sp"
                    android:layout_marginLeft="13dp"
                    android:textColor="#757575"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/alamatTextView"
                        android:layout_width="0dp"
                        android:layout_height="27dp"
                        android:layout_weight="1"
                        android:layout_gravity="start"
                        android:gravity="center_vertical"
                        android:paddingStart="9dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:text="Plaju, Palembang"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:background="@drawable/rounded_edittext_2"/>

                    <ImageView
                        android:id="@+id/editAlamatIcon"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/ic_edit"
                        android:layout_marginLeft="6dp"
                        android:contentDescription="Edit Jurusan"
                        android:clickable="true"
                        android:focusable="true"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Input Baru -->
            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-mail Baru"
                android:textSize="16sp"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:background="@drawable/rounded_edittext_2"
                android:layout_marginBottom="16dp"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/noTelpEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nomor Telp Baru"
                android:textSize="16sp"
                android:inputType="number"
                android:padding="12dp"
                android:background="@drawable/rounded_edittext_2"
                android:layout_marginBottom="16dp"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/alamatEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Alamat Baru"
                android:textSize="16sp"
                android:padding="12dp"
                android:background="@drawable/rounded_edittext_2"
                android:layout_marginBottom="16dp"
                android:visibility="gone"/>

            <!-- Tombol Edit untuk Memperbarui Data -->
            <Button
                android:id="@+id/editButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Profile"
                android:padding="12dp"
                android:background="@color/maroon"
                android:textColor="@color/putih"
                android:visibility="gone"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
